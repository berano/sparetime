<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.nick"
       name="Nick"
       version="1.0.0"
       provider-name="nixa">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Watch shows from nick.com</summary>
    <description lang="en">Favorite characters from Nickelodeon shows like iCarly, The Penguins of Madagascar and The Fairly OddParents.</description>
     <platform>all</platform>
  </extension>
</addon>
