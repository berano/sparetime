<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.fpt"
       name="Fastpasstv"
       version="1.0"
       provider-name="nixa">
    <requires>
        <import addon="xbmc.python" version="1.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource"
               library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary>Fastpasstv.com</summary>
        <description>This video add-on enables streaming tv shows & movies videos (divxden & wisevid) from fastpasstv.com. You need to get your own username and password from the website</description>
    </extension>
</addon>

