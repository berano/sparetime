		<info compressed="false">http://sparetime.googlecode.com/svn/trunk/addons/addons.xml</info>
		<checksum></checksum>
		<datadir zip="false">http://sparetime.googlecode.com/svn/trunk/addons</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install Addons from http://sparetime.googlecode.com</summary>
		<description>Download and install addons from nixa repository.</description>
