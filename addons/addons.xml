<addons>
<addon id="plugin.video.fora"
       name="FORA.tv"
       version="1.00"
       provider-name="nixa">
  <requires>
    <import addon="xbmc.python" version="1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Watch events/talks/lectures from FORA.tv</summary>
    <description lang="en">Happy learning!</description>
     <platform>all</platform>
  </extension>
</addon>

